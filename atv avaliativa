CONSULTA
    private String cpf2;
    public void consult(String animal,int idade,String Cpf,String nomeDono,String especialidade,String data){
    Scanner tec = new Scanner(System.in);
        System.out.println("Insira o cpf do cliente para ver o historico");
        this.cpf2 = tec.nextLine();
        if (cpf2.equals(Cpf)) {
            System.out.println(nomeDono+" CPF: "+ Cpf+" com o pet: "+animal+" com "+ idade+" anos "+" marcou consulta para um "+especialidade+" na data "+ data);
        } else{
            System.out.println("Cpf invalido ou distinto");
        }
        
        
        
    }
}
