System.out.println("Insira o valor do raio: ");
double raio = tec.nextDouble();
double pi = 3.14;
double area = pi * (raio*raio);
System.out.println("A área do circulo é "+area);
System.out.println("Adicione perímetro: ");
double perimetro = 2 * pi*raio;
System.out.println("O valor do perímetro é: "+perimetro);
}}

2 - 
System.out.print("Adicione a area desejada: ");
int larg = tec.nextInt();
System.out.print("Adicione o perimetro desejado: ");
int alt = tec.nextInt();

double area = (alt*larg);
double perimetro = 2*(alt + larg);
System.out.printInt("Resultado: " + perimetro);
}}

3 -
Scanner tec = new Scanner(System.in);
System.out.println("Para começar, insira o nome do aulo");
String aluno = tec.nextLine();
System.out.println("Agora, o número da matrícula");
int matricula = tec.nextInt();
System.out.println("Qual a primeira nota?");
double n1 = tec.nextDouble();
System.out.println("Qual a segunda nota?");
double n2 = tec.nextDouble();
double media = (n2+n1)/2;
if (media>=7) {
System.out.println("A média do aluno "+aluno+" da matrícula "+matricula+"ficou com a média "+media+" foi aprovado");
} else {
System.out.println("A média do aluno "+aluno+" da matrícula "+matricula+"ficou com a média "+media+" foi reprovado");
}}}

